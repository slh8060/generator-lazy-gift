<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <style>
    .hidden {
      display: none;
    }
  </style>
</head>
<body>
<h1>gift</h1>


<button class="insertOneBtn">发布</button>
<button class="getInfoBtn">详情</button>
<button class="recommend">推荐</button>
<button class="interest">👍／不👍</button>
<button class="collect">收藏列表</button>





<script src="libs/jquery/v1.12.4/jquery.min.js"></script>
<script src="libs/jquery.base64/jquery.base64.js"></script>
<script src="src/js/common.js"></script>

<script>

  $(function () {

    //发布
    $('.insertOneBtn').on('click', function () {
      var items = [
        {
          "detail_level": 1,
          "brief": "烧烤工具",
          "content": "qsqqqqqq"
        },
        {
          "detail_level": 2,
          "brief": "烧烤食材",
          "content": "啊啊啊啊啊啊"
        },{
          "detail_level": 3,
          "brief": "烧烤调味料",
          "content": "等等等等等等"
        }
      ];

      var p = {
        "uname": "slh",
        "title": "去烧烤要带什么",
        "items": items
      };
      p = JSON.stringify(p);
      $.ajax({
        url: '/publish.json',
        type: "post",
        data:{
          'p': p
        },
        success: function (results) {
          console.log(results);
        }
      })
    });

    //详情
    $('.getInfoBtn').on('click', function () {
      var p = {
        "detailId": 57,
       // "userId": 5
      };
      $.ajax({
        url: "/detail.json",
        type: "post",
        data: {
          "p": JSON.stringify(p)
        },
        success: function (results) {
          console.log(results);
        }
      })
    })

    //推荐
    $('.recommend').on('click', function () {
      var p = {
        "start": 1,
        "limit": 7,
        "firstTime": "2017-11-15T02:42:22.263Z",
        "userId": 5
      };
      $.ajax({
        url: "/recommend.json",
        type: "post",
        data: {
          "p": JSON.stringify(p)
        },
        success: function (results) {
          console.log(results);
          $('.detail').text(results);
        }
      })
    })

    //赞／不赞
    $('.interest').on('click',function () {
      var p = {
        "userId": 5,
        "detailId": 57,
        "is_interest": 1
      };
      $.ajax({
        url: '/approve.json',
        type: "post",
        data: {
          "p": JSON.stringify(p)
        },
        success: function (data) {
          console.log(data);
        }
      })
    })


    //收藏列表
    $('.collect').on('click',function () {
      var p = {
        "userId": 5
      };
      $.ajax({
        url: '/approve.json',
        type: "post",
        data: {
          "p": JSON.stringify(p)
        },
        success: function (data) {
          console.log(data);
        }
      })
    })

  })
</script>
</body>
</html>
